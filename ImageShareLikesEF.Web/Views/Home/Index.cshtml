@using ImageShareLikesEF.Data
@model ImagesViewModel
@foreach (Image i in Model.Images)
{
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="jumbotron" style="margin-bottom: 20px; text-align: center;">

                <a href="/home/viewimage?id=@i.Id">
                    <h3>@i.Title</h3>
                    <h5>Uploaded at: @i.TimeUploaded</h5>
                    <img style="width: 400px;" src="/uploads/@i.FileName" />
                </a>
            </div>
        </div>
    </div>
}



